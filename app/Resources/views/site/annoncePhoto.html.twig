{% extends ':site:index.html.twig' %}

{% block header %}
    <div class="header">
        <img class="header-img" src="{{asset('./images/fond-page-photos.jpg')}}" />
    </div>
{% endblock %}

{% block section %}

    {#Boucle qui va rappeler les différents articles autant de fois qu'ils sont demandés
    dans la section Photo#}

    <div id="photo">
        <div class="container-fluid photo_event">
            <div class="row">
                {% for photos in annoncePhotos %}
                    <div class="changementCouleur col-xs-12 col-sm-12 col-md-12">
                        <div class="thumbnail couleur">
                            <img class="img-section" src="{{asset('uploads/images/')~photos.photo}}" class="img-responsive">  
                            <h2 class="title">{{photos.titre}} |</h2>
                            <p class="info">{{photos.ville}}</p>
                            <p class="info">{{photos.appareilPhotoUtilise}}</p>
                            <p class="title"> {{photos.date|date('d/m/y')}} |</p>
                            <p class="title">{{photos.auteur}}</p>
                            <div class="comm_suite">
                                <p class="commentaire">{{photos.commentaire| truncate(450, true, ' ...')}}</p>
                                <p class="suite"><a href="{{path('detailphoto')}}"><b>Voir la suite</b></a></p>
                            </div>

                        </div>
                    </div>    

                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}
