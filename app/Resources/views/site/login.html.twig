{% extends ':site:index.html.twig' %}

{% block section %}
    
    {#Page pour se connecter#}
    
    <div class="">
            <div class="container-fluid"> 
                <div class="">
                    <h1>Connexion</h1>
                </div>

                    {#Champ pour mettre l'email#}
                
                <div class="">
                    <form class="form-horizontal" action="{# {{path('',{}) }} #}>" method="post">
                        <div class="form-group">
                            <label for="inputEmail" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                    <input type="text" name="_username" class="form-control" id="inputEmail" placeholder="Utilisateur">
                                </div>
                            </div>
                        </div>
                        
                        {#Champ pour mettre le mot de passe#}
                        
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                    <input type="password" name="_password" class="form-control" id="inputPassword" placeholder="Mot de passe">
                                </div>
                            </div>
                            
                            {#Case Ã  cocher pour se souvenir de l'utilisateur#}
                            
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox"> Se souvenir de moi
                                        </label>
                                    </div>
                                </div>
                            </div>
                            
                            {#Bouton connexion#}
                            
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <input type="submit" action="{{path('add')}}"  class="btn btn-default" value="connexion" />
                                </div>
                            </div>
                            </div>
                    </form>
                

            </div>
        </div>
    </div>

{% endblock %}